<script type="text/javascript" src="/js/PageNav.js"></script>
<script type="text/javascript">
    //请求一次，创建分页条
    $.get("/room?page=1",function(data){
        $("#xiu").hide();
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        });
        gotopage(1);
    });
    // 排序
    var compare = function (prop) {
        return function (obj1, obj2) {
            var val1 = obj1[prop];
            var val2 = obj2[prop];
            if (!isNaN(Number(val1)) && !isNaN(Number(val2))) {
                val1 = Number(val1);
                val2 = Number(val2);
            }
            if (val1 < val2) {
                return -1;
            } else if (val1 > val2) {
                return 1;
            } else {
                return 0;
            }
        }
    }
    //Ajax请求，请求JSON数据
    function gotopage(pagenumber){
        //清空
        $("#tbody").empty();
        //获得新的数据
        $.get("/room?page=" + pagenumber,function(data){
            var paixu =data.results.sort(compare("type"))
            $.each(paixu ,function(i, n){
                $tr = $("<tr></tr>");
                $("<td></td>").html(n.type).appendTo($tr);
                $("<td></td>").html(n.name).appendTo($tr);
                $("<td></td>").html(n.area).appendTo($tr);
                $("<td></td>").html(n.num).appendTo($tr);
                $("<td></td>").html(n.food).appendTo($tr);
                $("<td></td>").html(n.newtword).appendTo($tr);
                $("<td></td>").html(n.tv).appendTo($tr);
                $("<td></td>").html(n.price).appendTo($tr);
                $("<td></td>").html(n.numAll).appendTo($tr);
                $("<td></td>").html(n.surplus).appendTo($tr);
                $("<td><input type='button' id='btn3' class='btn btn-warning modbtn' value='免费预定' data-sid='" + n.type + "' data-toggle='modal'  data-target='#myModalChange'/></td>").html(n.handle).appendTo($tr);
                //上树
                $tr.appendTo($("#tbody"));
            });
        });
    }



    $("#tbody").delegate("#btn3","click",function(){
        var sid = $(this).attr("data-sid");
        $.post("/yuding/"+ sid,function (data) {
            console.log(data)
            console.log(data.result[0].type);
            $("#xiugaiBtn").click(function () {
                $("#myModalChange").modal("hide");
                $.post("/yonghuxinxieru",{
                    zhengjianleixing:$(".zhengjianleixing").val(),
                    zhengjianhao:$(".zhengjianhao").val(),
                    xingming:$(".xingming").val(),
                    sex:$(".sex").val(),
                    startdate:$(".startdate").val(),
                    enddate:$(".enddate").val(),
                    type:data.result[0].type,
                },function (data) {
                    console.log(data);
                })
            })
        })
    })
    $("#tuichu").click(function () {
        $.get("/tui" ,function (data) {
            console.log(data.resul);
            if (data.resul == 1){
                alert("退出成功");
                window.location.href = "/"
            } else{
                alert("退出失败")
            }
        })
    })
</script>
